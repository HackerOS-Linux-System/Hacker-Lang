{
  "name": "hacker-editor",
  "productName": "Hacker Editor",
  "version": "1.0.0",
  "description": "Enhanced GUI IDE for Hacker Lang on Linux HackerOS",
  "main": "main.js",
  "author": "HackerOS Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir --linux",
    "build": "electron-builder --linux"
  },
  "build": {
    "appId": "com.hackeros.hackereditor",
    "productName": "Hacker Editor",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "app": ".",
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "extra/",
        "to": "extra",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "desktop": {
        "Name": "Hacker Editor",
        "Comment": "Enhanced GUI IDE for Hacker Lang",
        "StartupNotify": "true"
      }
    },
    "compression": "normal"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
